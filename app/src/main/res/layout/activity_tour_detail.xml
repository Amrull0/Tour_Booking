<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Кнопка назад -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Назад"
            android:layout_marginBottom="16dp" />

        <!-- Изображение тура -->
        <ImageView
            android:id="@+id/tour_detail_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Изображение тура"
            android:layout_marginBottom="16dp" />

        <!-- Название -->
        <TextView
            android:id="@+id/tour_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название тура"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Маршрут -->
        <TextView
            android:id="@+id/tour_detail_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Маршрут: "
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <!-- Цена -->
        <TextView
            android:id="@+id/tour_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена: 50000 ₽"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Количество мест -->
        <TextView
            android:id="@+id/tour_detail_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Доступно мест: "
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Описание -->
        <TextView
            android:id="@+id/tour_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание тура"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <!-- Количество участников -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Участники:"
                android:textSize="16sp"
                android:layout_marginRight="8dp" />

            <EditText
                android:id="@+id/participants_input"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1"
                android:maxLines="1" />

        </LinearLayout>
        <!-- Даты тура -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Даты тура:"
                android:textSize="16sp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/tour_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.01.2024 - 10.01.2024"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
             <Button
                android:id="@+id/select_dates_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выбрать даты поездки"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />

        <!-- Продолжительность -->
        <TextView
            android:id="@+id/tour_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Продолжительность: 10 дней"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Кнопка бронирования -->
        <Button
            android:id="@+id/book_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Забронировать тур"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>