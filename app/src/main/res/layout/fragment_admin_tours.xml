<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Управление турами"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка добавления -->
    <Button
        android:id="@+id/add_tour_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Добавить тур"
        android:textSize="16sp"
        android:padding="12dp"
        android:backgroundTint="?android:attr/colorPrimary"
        android:layout_marginBottom="16dp" />

    <!-- Список туров -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_tours_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_tour_admin" />

    <!-- Сообщение если пусто -->
    <TextView
        android:id="@+id/empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет туров для управления"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="32dp" />

</LinearLayout>