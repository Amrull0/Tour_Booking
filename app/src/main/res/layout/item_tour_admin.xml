<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/tour_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_marginEnd="16dp" />

    <!-- Информация о туре -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tour_title"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ellipsize="end"
            android:maxLines="@integer/material_motion_duration_long_2"
            android:text="Название тура"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <!-- Кнопки управления -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:contentDescription="Редактировать"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:contentDescription="Удалить"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@android:color/holo_red_dark" />

    </LinearLayout>

</LinearLayout>